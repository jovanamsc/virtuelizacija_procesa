<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<system.serviceModel>
		<client>
			<endpoint
			  name="ChargingService"
			  address="net.tcp://localhost:4000/ChargingService"
			  binding="netTcpBinding"
			  bindingConfiguration="LargeDataBinding"
			  contract="EVCharger.Contracts.IChargingService" />
		</client>

		<bindings>
			<netTcpBinding>
				<binding name="LargeDataBinding"
						 maxReceivedMessageSize="10485760"
						 transferMode="Streamed" />
			</netTcpBinding>
		</bindings>
	</system.serviceModel>
</configuration>
