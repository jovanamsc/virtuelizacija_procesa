<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<system.serviceModel>
		<services>
			<service name="EVCharger.Server.ChargingService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4000/" />
					</baseAddresses>
				</host>

				<endpoint
				  address="ChargingService"
				  binding="netTcpBinding"
				  bindingConfiguration="LargeDataBinding"
				  contract="EVCharger.Contracts.IChargingService" />
			</service>
		</services>

		<!-- Konfiguracija binda -->
		<bindings>
			<netTcpBinding>
				<binding name="LargeDataBinding"
						 maxReceivedMessageSize="10485760"
						 transferMode="Streamed" />
			</netTcpBinding>
		</bindings>
	</system.serviceModel>
</configuration>
